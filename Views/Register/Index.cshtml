@using Harmic.Utilities;
@model Harmic.Models.TbAccount;

<main class="main-content">
            <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1920x373.jpg">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-lg-12">
                            <div class="breadcrumb-item">
                                <h2 class="breadcrumb-heading">Product Related</h2>
                                <ul>
                                    <li>
                                        <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                                    </li>
                                    <li>Register</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="login-register-area section-space-y-axis-100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 pt-10 pt-lg-0">
                            <form asp-action="Index">
                                <div class="login-form">
                                    <h4 class="login-title">Register</h4>
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <label for="yourName">First Name</label>
                                            <input type="text" asp-for="Username" id="yourName" placeholder="First Name" required>
                                        </div>
                                        
                                        <div class="col-md-12">
                                            <label for="yourEmail">Email Address*</label>
                                            <input type="email" asp-for="Email" id="yourEmail" placeholder="Email Address" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="yourPassword">Password</label>
                                    <input type="password" asp-for="Password" id="yourPassword" placeholder="Password" required>
                                    @Function._MessageEmail
                                        </div>
                                        
                                        <div class="col-12">
                                            <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Register</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>